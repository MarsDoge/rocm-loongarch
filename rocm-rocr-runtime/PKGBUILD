pkgbase='rocm-rocr-runtime'
pkgname=('rocm-rocr-runtime')
pkgver=5.7.x
pkgrel=507000
pkgdesc="rocm-core is a utility which can be used to get ROCm release version."
arch=('loong64' 'x86_64')
license=('Unknow')
url="https://github.com/RadeonOpenCompute/rocm-core"

source=(
    "git+git://nas.xinmu.moe/mirrors/github.com/loongarch-moe/ROCR-Runtime.git#branch=rocm-5.7.x-loong"
)
b2sums=('SKIP')
depends=("rocm-llvm=${pkgver}")

PATH=/opt/rocm-${pkgver}/llvm/bin:$PATH
prepare() {
  sed -i '77 i #elif defined(__loongarch64)' ROCR-Runtime/src/image/util.h
  mkdir build || true
  cd build
  cmake "../ROCR-Runtime/src" \
   -DCMAKE_C_COMPILER=/opt/rocm-${pkgver}/llvm/bin/clang \
   -DCMAKE_CXX_COMPILER=/opt/rocm-${pkgver}/llvm/bin/clang++ \
  -DCMAKE_INSTALL_PREFIX=/opt/rocm-${pkgver} \
  -G 'Unix Makefiles'
}
build() {
  cd build
  make -j
}

check() {
  cd build
#  ninja test
#make check
#echo
}

#packaging() {

#}
package() {
  cd build
  make DESTDIR="$pkgdir/" install
}
