pkgbase='rocm-rocALUTION'
pkgname=('rocm-rocALUTION')
pkgver=6.3.1
pkgrel=631000
pkgdesc="rocm-core is a utility which can be used to get ROCm release version."
arch=('loong64' 'x86_64')
license=('MIT')
url="https://github.com/ROCm/ROCT-Thunk-Interface.git"

source=(
    "git+https://github.com/ROCm/rocALUTION.git#tag=rocm-$pkgver"
)
b2sums=('SKIP')
depends=(
  "rocm-clr=${pkgver}"
)
PATH=/opt/rocm-${pkgver}/bin:$PATH
prepare() {
  mkdir build || true
  cd build
  cmake ../rocALUTION \
   -DCMAKE_BUILD_TYPE=RelWithDebInfo \
   -DAMDGPU_TARGETS=$AMDGPU_TARGETS \
   -DCMAKE_C_COMPILER=/opt/rocm-${pkgver}/bin/clang \
   -DCMAKE_FIND_ROOT_PATH=/opt/rocm-${pkgver}/ \
   -DCMAKE_CXX_COMPILER=/opt/rocm-${pkgver}/bin/hipcc \
   -DCMAKE_CXX_FLAGS="-L/opt/rocm-${pkgver}/lib  -L/opt/rocm-${pkgver}/hip/lib" \
   -DCMAKE_PREFIX_PATH="/opt/rocm-${pkgver}/hip/cmake/;/opt/rocm-${pkgver}/;/usr" \
   -DCMAKE_MODULE_PATH="/opt/rocm-${pkgver}/hip/cmake/;" \
   -DCMAKE_INSTALL_PREFIX=/opt/rocm-${pkgver} \
   -DSUPPORT_HIP=ON \
   -DSUPPORT_OMP=OFF \
   -DBUILD_SHARED_LIBS=ON \
   -DCMAKE_EXE_LINKER_FLAGS="-L/opt/rocm-${pkgver}/lib  -L/opt/rocm-${pkgver}/hip/lib" \
  -G "Unix Makefiles"
}
build() {
  mkdir build || true
  cd build
  make -j$(nproc)
}

check() {
#  cd "ROCm-CompilerSupport"
#  cd build
#  make ctest
echo
}

#packaging() {

#}
package() {
  cd build
  make DESTDIR="$pkgdir/" install
}
