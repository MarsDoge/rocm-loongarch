pkgbase='rocm-rocALUTION'
pkgname=('rocm-rocALUTION')
pkgver=5.7.x
pkgrel=507000
pkgdesc="rocm-core is a utility which can be used to get ROCm release version."
arch=('loong64' 'x86_64')
license=('MIT')
url="https://github.com/RadeonOpenCompute/ROCT-Thunk-Interface.git"

source=(
    "git+git://nas.xinmu.moe/mirrors/github.com/ROCmSoftwarePlatform/rocALUTION.git#branch=release/rocm-rel-5.7"
)
b2sums=('SKIP')
depends=(
  "rocm-clr=${pkgver}"
)
PATH=/opt/rocm-${pkgver}/bin:$PATH
prepare() {
  sed -i '129,133d' rocALUTION/src/CMakeLists.txt
  sed -i '129d' rocALUTION/src/CMakeLists.txt


#  sed -i '32i find_package( HIP CONFIG REQUIRED )' rocALUTION/test/CMakeLists.txt
  mkdir build || true
  cd build
  LD_LIBRARY_PATH=/opt/rocm-${pkgver}/lib64:/opt/rocm-${pkgver}/lib:/opt/rocm-${pkgver}/hip/lib:$LD_LIBRARY_PATH cmake ../rocALUTION \
   -DCMAKE_BUILD_TYPE=Debug \
   -DAMDGPU_TARGETS=gfx1030 \
   -DCMAKE_C_COMPILER=/opt/rocm-${pkgver}/bin/clang \
   -DCMAKE_FIND_ROOT_PATH=/opt/rocm-${pkgver}/ \
   -DCMAKE_CXX_COMPILER=/opt/rocm-${pkgver}/bin/hipcc \
   -DCMAKE_CXX_FLAGS="-L/opt/rocm-${pkgver}/lib  -L/opt/rocm-${pkgver}/hip/lib" \
   -DCMAKE_PREFIX_PATH="/opt/rocm-${pkgver}/;/usr" \
   -DCMAKE_INSTALL_PREFIX=/opt/rocm-${pkgver} \
   -DCMAKE_EXE_LINKER_FLAGS="-L/opt/rocm-${pkgver}/lib  -L/opt/rocm-${pkgver}/hip/lib" \
  -G "Unix Makefiles"
}
build() {
  mkdir build || true
  cd build
  LD_LIBRARY_PATH=/opt/rocm-${pkgver}/lib64:/opt/rocm-${pkgver}/lib:/opt/rocm-${pkgver}/hip/lib:$LD_LIBRARY_PATH make -j16
}

check() {
#  cd "ROCm-CompilerSupport"
#  cd build
#  make ctest
echo
}

#packaging() {

#}
package() {
  cd build
  LD_LIBRARY_PATH=/opt/rocm-${pkgver}/lib64:/opt/rocm-${pkgver}/lib:/opt/rocm-${pkgver}/hip/lib:$LD_LIBRARY_PATH make DESTDIR="$pkgdir/" install
}
