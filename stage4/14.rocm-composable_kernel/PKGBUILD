
pkgbase='rocm-composable_kernel'
pkgname=('rocm-composable_kernel')
pkgver=next
pkgrel=999000
pkgdesc="rocm-core is a utility which can be used to get ROCm release version."
arch=('loong64' 'x86_64')
license=('MIT')
url="https://github.com/RadeonOpenCompute/ROCT-Thunk-Interface.git"

source=(
    "git+https://github.com/ROCmSoftwarePlatform/composable_kernel.git#branch=develop"
    "composable_kernel_loongarch.patch"
)
b2sums=('SKIP' 'SKIP')
depends=(
  "rocm-clr=${pkgver}"
  "rocm-rocBLAS=${pkgver}"
  "rocm-rocMLIR=${pkgver}"
)
PATH=/opt/rocm-${pkgver}/bin:$PATH
prepare() {
  cd composable_kernel
    git apply ../composable_kernel_loongarch.patch
  cd ..
  mkdir build || true
  cd build
  LD_LIBRARY_PATH=/opt/rocm-${pkgver}/lib64:/opt/rocm-${pkgver}/lib:/opt/rocm-${pkgver}/hip/lib:$LD_LIBRARY_PATH cmake ../composable_kernel \
   -DCMAKE_BUILD_TYPE=Debug \
   -DCMAKE_C_COMPILER=/opt/rocm-${pkgver}/bin/clang \
   -DCMAKE_FIND_ROOT_PATH=/opt/rocm-${pkgver}/ \
   -DCMAKE_CXX_COMPILER=/opt/rocm-${pkgver}/bin/clang++ \
   -DCMAKE_CXX_FLAGS="-L/opt/rocm-${pkgver}/lib  -L/opt/rocm-${pkgver}/hip/lib" \
   -DCMAKE_PREFIX_PATH="/opt/rocm-${pkgver}/;/usr" \
   -DCMAKE_INSTALL_PREFIX=/opt/rocm-${pkgver} \
   -DCMAKE_EXE_LINKER_FLAGS="-L/opt/rocm-${pkgver}/lib  -L/opt/rocm-${pkgver}/hip/lib" \
   -DBUILD_SHARED_LIBS=ON \
   -DAMDGPU_TARGETS=gfx1030 \
   -DGPU_TARGETS=gfx1030 \
  -G "Unix Makefiles"

}
build() {
  mkdir build || true
  cd build
  LD_LIBRARY_PATH=/opt/rocm-${pkgver}/lib64:/opt/rocm-${pkgver}/lib:/opt/rocm-${pkgver}/hip/lib:$LD_LIBRARY_PATH make -j6
}

check() {
#  cd "ROCm-CompilerSupport"
#  cd build
#  make ctest
echo
}

#packaging() {

#}
package() {
  cd build
  LD_LIBRARY_PATH=/opt/rocm-${pkgver}/lib64:/opt/rocm-${pkgver}/lib:/opt/rocm-${pkgver}/hip/lib:$LD_LIBRARY_PATH make DESTDIR="$pkgdir/" install
}
