pkgbase='rocm-ROCgdb'
pkgname=('rocm-ROCgdb')
pkgver=next
pkgrel=999000
pkgdesc="rocm-core is a utility which can be used to get ROCm release version."
arch=('loong64' 'x86_64')
license=('MIT')
url="https://github.com/RadeonOpenCompute/ROCT-Thunk-Interface.git"

source=(
    "git+https://github.com/ROCm-Developer-Tools/ROCgdb.git#branch=rocm-5.7.x"
)
b2sums=('SKIP')
depends=("rocm-clr=${pkgver}")
PATH=/opt/rocm-${pkgver}/bin:$PATH
prepare() {
#  sed -i '32d' ROCgdb/test/CMakeLists.txt
#  sed -i '32i find_package( HIP CONFIG REQUIRED )' ROCgdb/test/CMakeLists.txt
  mkdir build || true
  cd build
  PKG_CONFIG_PATH=/opt/rocm-${pkgver}/lib64/pkgconfig/:/opt/rocm-${pkgver}/share/pkgconfig/:/usr/lib/pkgconfig ../ROCgdb/configure \
    --enable-targets="loongarch64-linux-gnu,amdgcn-amd-amdhsa" \
    --disable-ld --disable-gas --disable-gdbserver --disable-sim --enable-tui \
    --disable-gdbtk --with-expat --with-system-zlib \
    --without-guile --with-babeltrace --with-lzma --with-python=python3.12 \
    --prefix=/opt/rocm-${pkgver}
}
build() {
  mkdir build || true
  cd build
  make -j8
}

check() {
#  cd "ROCm-CompilerSupport"
#  cd build
#  make ctest
echo
}

#packaging() {

#}
package() {
  cd build
  make DESTDIR="$pkgdir/" install
}
