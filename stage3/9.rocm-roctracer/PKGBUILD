
pkgbase='rocm-roctracer'
pkgname=('rocm-roctracer')
pkgver=6.3.1
pkgrel=631000
pkgdesc="rocm-core is a utility which can be used to get ROCm release version."
arch=('loong64' 'x86_64' 'riscv64')
license=('MIT')
url="https://github.com/ROCm/ROCT-Thunk-Interface.git"

source=(
    "git+https://github.com/ROCm/roctracer.git#tag=rocm-$pkgver"
)
b2sums=('SKIP')
depends=("rocm-clr=${pkgver}")
PATH=/opt/rocm-${pkgver}/bin:$PATH
prepare() {
#  sed -i '32d' roctracer/test/CMakeLists.txt
#  sed -i '32i find_package( HIP CONFIG REQUIRED )' roctracer/test/CMakeLists.txt
  mkdir build || true
  cd build
  cmake ../roctracer \
   -DCMAKE_BUILD_TYPE=RelWithDebInfo \
   -DCMAKE_C_COMPILER=/opt/rocm-${pkgver}/bin/clang \
   -DCMAKE_FIND_ROOT_PATH=/opt/rocm-${pkgver}/ \
   -DCMAKE_CXX_COMPILER=/opt/rocm-${pkgver}/bin/hipcc \
   -DCMAKE_MODULE_PATH="/opt/rocm-${pkgver}/lib64/cmake/hip/" \
   -DCMAKE_INSTALL_PREFIX=/opt/rocm-${pkgver} \
   -DCMAKE_CXX_FLAGS="-D__HIP_PLATFORM_AMD__  -parallel-jobs=$(nproc)" \
   -DCMAKE_C_FLAGS="-D__HIP_PLATFORM_AMD__  -parallel-jobs=$(nproc)" \
   -DCMAKE_INSTALL_RPATH="/opt/rocm-${pkgver}/lib;/opt/rocm-${pkgver}/lib64" \
   -DCMAKE_BUILD_RPATH="/opt/rocm-${pkgver}/lib;/opt/rocm-${pkgver}/lib64" \
   -DBUILD_RPATH_USE_ORIGIN=OFF \
   -DGPU_TARGETS="gfx900 gfx906 gfx908 gfx90a gfx940 gfx941 gfx942 gfx1030 gfx1100 gfx1101 gfx1102" \
  -G "Unix Makefiles"
  #sed -i '3921,d' build/hipify/src/device/device_table.h

}
build() {
  mkdir build || true
  cd build
  make -j$(nproc)
}

check() {
#  cd "ROCm-CompilerSupport"
#  cd build
#  make ctest
echo
}

#packaging() {

#}
package() {
  cd build
  make DESTDIR="$pkgdir/" install
}
