
pkgbase='rocm-rocSPARSE'
pkgname=('rocm-rocSPARSE')
pkgver=6.2.2
pkgrel=622000
pkgdesc="rocm-core is a utility which can be used to get ROCm release version."
arch=('loong64' 'x86_64')
license=('MIT')
url="https://github.com/ROCm/ROCT-Thunk-Interface.git"

source=(
    "git+https://github.com/ROCm/rocSPARSE.git#tag=rocm-$pkgver"
)
b2sums=('SKIP')
depends=("rocm-clr=${pkgver}" "rocm-rocPRIM=${pkgver}" "rocm-rccl=${pkgver}")
PATH=/opt/rocm-${pkgver}/bin:$PATH
prepare() {
  sed -i 's!std=f2003!std=f2018!g' rocSPARSE/library/CMakeLists.txt
  mkdir build || true
  cd build
  LD_LIBRARY_PATH=/opt/rocm-${pkgver}/lib64:/opt/rocm-${pkgver}/lib:/opt/rocm-${pkgver}/hip/lib:$LD_LIBRARY_PATH cmake ../rocSPARSE \
   -DCMAKE_BUILD_TYPE=Release \
   -DCMAKE_C_COMPILER=/opt/rocm-${pkgver}/bin/clang \
   -DCMAKE_FIND_ROOT_PATH=/opt/rocm-${pkgver}/ \
   -DCMAKE_CXX_COMPILER=/opt/rocm-${pkgver}/bin/hipcc \
   -DCMAKE_CXX_FLAGS="-L/opt/rocm-${pkgver}/lib  -L/opt/rocm-${pkgver}/hip/lib" \
   -DCMAKE_PREFIX_PATH="/opt/rocm-${pkgver}/;/usr" \
   -DCMAKE_INSTALL_PREFIX=/opt/rocm-${pkgver} \
   -DAMDGPU_TARGETS=gfx1030 \
   -DCMAKE_EXE_LINKER_FLAGS="-L/opt/rocm-${pkgver}/hip/lib" \
   -DBUILD_SHARED_LIBS=ON \
  -G "Unix Makefiles"
}
build() {
  mkdir build || true
  cd build
  LD_LIBRARY_PATH=/opt/rocm-${pkgver}/lib64:/opt/rocm-${pkgver}/lib:/opt/rocm-${pkgver}/hip/lib:$LD_LIBRARY_PATH make -j$(nproc)
}

check() {
#  cd "ROCm-CompilerSupport"
#  cd build
#  make ctest
echo
}

#packaging() {

#}
package() {
  cd build
  LD_LIBRARY_PATH=/opt/rocm-${pkgver}/lib64:/opt/rocm-${pkgver}/lib:/opt/rocm-${pkgver}/hip/lib:$LD_LIBRARY_PATH make DESTDIR="$pkgdir/" install
}

