pkgbase='rocm-core'
pkgname=('rocm-core')
pkgver=6.2.2
pkgrel=622000
pkgdesc="rocm-core is a utility which can be used to get ROCm release version."
arch=('loong64' 'x86_64')
license=('MIT')
url="https://github.com/ROCm/rocm-core"

source=(
    "git+https://github.com/ROCm/rocm-core.git"
)
b2sums=('SKIP')
prepare() {
  mkdir build || true
  cd build
  cmake ../rocm-core \
  "-DCMAKE_INSTALL_PREFIX=/opt/rocm-${pkgver}" \
  -DPROJECT_VERSION_MAJOR=6 \
  -DPROJECT_VERSION_MINOR=2 \
  -DPROJECT_VERSION_PATCH=2 \
  -DROCM_VERSION=6.2.2 \
  -G "Unix Makefiles"
}
build() {
  cd build
  cmake --build .
}

check() {
#  cd build
#  ninja check
echo
}

#packaging() {
#
#}
package() {
  cd build
  cmake --install . --prefix "$pkgdir"/opt/rocm-${pkgver}
}
