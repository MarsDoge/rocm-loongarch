pkgbase='rocm-core'
pkgname=('rocm-core')
pkgver=5.7.x
pkgrel=507000
pkgdesc="rocm-core is a utility which can be used to get ROCm release version."
arch=('loong64' 'x86_64')
license=('MIT')
url="https://github.com/RadeonOpenCompute/rocm-core"

source=(
    "git+git://nas.xinmu.moe/mirrors/github.com/RadeonOpenCompute/rocm-core.git"
)
b2sums=('SKIP')
prepare() {
  mkdir build || true
  cd build
  cmake ../rocm-core \
  "-DCMAKE_INSTALL_PREFIX=/opt/rocm-${pkgver}" \
  -DPROJECT_VERSION_MAJOR=5 \
  -DPROJECT_VERSION_MINOR=7 \
  -DPROJECT_VERSION_PATCH=0 \
  -DROCM_VERSION=5.7.0 \
  -G "Unix Makefiles"
}
build() {
  cd build
  make -j
}

check() {
#  cd build
#  ninja check
echo
}

#packaging() {
#
#}
package() {
  cd build
  make DESTDIR="$pkgdir/" install
}
