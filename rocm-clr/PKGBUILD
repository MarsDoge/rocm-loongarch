pkgbase='rocm-clr'
pkgname=('rocm-clr')
pkgver=5.7.x
pkgrel=507000
pkgdesc="rocm-core is a utility which can be used to get ROCm release version."
arch=('loong64' 'x86_64')
license=('MIT')
url="https://github.com/RadeonOpenCompute/ROCT-Thunk-Interface.git"

source=(
    "git+git://nas.xinmu.moe/mirrors/github.com/ROCm-Developer-Tools/HIPCC.git#branch=rocm-5.7.x"
    "git+git://nas.xinmu.moe/mirrors/github.com/ROCm-Developer-Tools/clr.git#branch=rocm-5.7.x"
    "git+git://nas.xinmu.moe/mirrors/github.com/ROCm-Developer-Tools/HIP.git#branch=rocm-5.7.x"
)
b2sums=('SKIP' 'SKIP' 'SKIP')
PATH=/opt/rocm-${pkgver}/bin:/opt/rocm-${pkgver}/llvm/bin:$PATH
depends=("rocm-llvm=${pkgver}"
"rocm-roct-thunk-interface=${pkgver}"
"rocm-cmake=${pkgver}"
"rocm-device-libs=${pkgver}"
"rocm-rocr-runtime=${pkgver}"
"rocminfo=${pkgver}"
"rocm-compilersupport=${pkgver}")

prepare() {
  mkdir hipcc-build || true
  cd hipcc-build
  cmake ../HIPCC \
   -DCMAKE_BUILD_TYPE=Release \
   -DCMAKE_C_COMPILER=/opt/rocm-${pkgver}/llvm/bin/clang \
   -DCMAKE_FIND_ROOT_PATH=/opt/rocm-${pkgver}/ \
   -DCMAKE_CXX_COMPILER=/opt/rocm-${pkgver}/llvm/bin/clang++ \
   -DROCM_PATH=/opt/rocm-${pkgver}/ \
  "-DCMAKE_PREFIX_PATH=/opt/rocm-${pkgver}/llvm/;/opt/rocm-${pkgver}/;/usr" \
  "-DCMAKE_INSTALL_PREFIX=/opt/rocm-${pkgver}" \
  -DCMAKE_EXE_LINKER_FLAGS="-L/opt/rocm-${pkgver}/llvm/lib" \
  -G "Unix Makefiles"
  make -j4
  cd ..

  if [ $CARCH == 'loong64' ];
  then
    sed -i 's!x86_64-unknown-linux-gnu!loongarch64-unknown-linux-gnu!g' clr/hipamd/src/hip_embed_pch.sh
    sed -i 's!#include <immintrin.h>!!g' clr/rocclr/device/rocm/rocvirtual.cpp
    sed -i '2812 i #if defined(__x86_64)' clr/rocclr/device/rocm/rocvirtual.cpp
    sed -i '2830 i #endif' clr/rocclr/device/rocm/rocvirtual.cpp
  fi

  mkdir build || true
  cd build
  cmake ../clr/ \
   -DHIP_COMMON_DIR=$PWD/../HIP \
   -DHIP_PLATFORM=amd \
   -DHIPCC_BIN_DIR=$PWD/../hipcc-build/ \
   -DCLR_BUILD_HIP=ON \
   -DCMAKE_BUILD_TYPE=Release \
   -DCLR_BUILD_OCL=OFF \
  -DROCM_PATH=/opt/rocm-${pkgver}/ \
   -DCMAKE_C_COMPILER=/opt/rocm-${pkgver}/llvm/bin/clang \
   -DCMAKE_FIND_ROOT_PATH=/opt/rocm-${pkgver}/ \
   -DCMAKE_CXX_COMPILER=/opt/rocm-${pkgver}/llvm/bin/clang++ \
   -DCMAKE_PREFIX_PATH="/opt/rocm-${pkgver}/llvm/;/opt/rocm-${pkgver}/;/usr" \
   -DCMAKE_INSTALL_PREFIX="/opt/rocm-${pkgver}" \
   -DCMAKE_EXE_LINKER_FLAGS="-L/opt/rocm-${pkgver}/llvm/lib" \
   -G "Unix Makefiles"
  sed -i 's!.bat!!g' hipamd/cmake_install.cmake
}
build() {
  mkdir build || true
  cd build
  make -j4
}

check() {
#  cd "ROCm-CompilerSupport"
#  cd build
#  make ctest
echo
}

#packaging() {

#}
package() {
  cd build
  make DESTDIR="$pkgdir/" install
}
