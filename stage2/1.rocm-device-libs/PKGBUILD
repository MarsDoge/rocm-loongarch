pkgbase='rocm-device-libs'
pkgname=('rocm-device-libs')
pkgver=next
pkgrel=999000
pkgdesc="ROCm Device Libraries"
arch=('loong64' 'x86_64')
license=('Unknow')
url="https://github.com/ROCm/ROCm-Device-Libs.git"

source=(
    "git+https://github.com/ROCm/ROCm-Device-Libs.git#branch=rocm-5.7.x"
    "rdl.patch"
)
depends=("rocm-llvm=${pkgver}")

b2sums=('SKIP' 'SKIP')
prepare() {
  cd ROCm-Device-Libs
    git apply ../rdl.patch
  cd ..
  mkdir build || true
  cd build
  cmake \
  -DCMAKE_BUILD_TYPE=Debug \
   -DCMAKE_C_COMPILER=/opt/rocm-${pkgver}/bin/clang \
   -DCMAKE_CXX_COMPILER=/opt/rocm-${pkgver}/bin/clang++ \
   "-DCMAKE_INSTALL_PREFIX=/opt/rocm-${pkgver}" \
   -DCMAKE_FIND_ROOT_PATH=/opt/rocm-${pkgver} \
   -DCMAKE_INSTALL_RPATH_USE_LINK_PATH=ON \
   -G "Unix Makefiles" \
   "../ROCm-Device-Libs"

}
build() {
  mkdir build || true
  cd build
  cmake --build .
}

check() {
  cd build
  mkdir test/compile/ || true
  cp ../ROCm-Device-Libs/test/compile/lgamma_r.cl test/compile/ || true
#  make test
}

#packaging() {

#}
package() {
  cd build
  cmake --install . --prefix "$pkgdir"/opt/rocm-${pkgver}
}

