pkgbase='rocm-roct-thunk-interface'
pkgname=('rocm-roct-thunk-interface')
pkgver=6.2.2
pkgrel=622000
pkgdesc=" Radeon Open Compute Thunk Interface "
arch=('loong64' 'x86_64')
license=('MIT')
depends=("rocm-llvm=${pkgver}")
url="https://github.com/ROCm/ROCT-Thunk-Interface.git"

source=(
    "git+https://github.com/ROCm/ROCT-Thunk-Interface.git#tag=rocm-$pkgver"
)
b2sums=('SKIP')
prepare() {
  mkdir build || true
  cd build
  cmake ../ROCT-Thunk-Interface \
   -DCMAKE_BUILD_TYPE=RelWithDebInfo \
   -DCMAKE_C_COMPILER=/opt/rocm-${pkgver}/bin/clang \
   -DCMAKE_CXX_COMPILER=/opt/rocm-${pkgver}/bin/clang++ \
   -DCMAKE_INSTALL_PREFIX=/opt/rocm-${pkgver} \
   -DBUILD_SHARED_LIBS=ON \
   -G "Unix Makefiles"
}
build() {
  mkdir build || true
  cd build
  cmake --build .
}

check() {
echo
}

#packaging() {

#}
package() {
  cd build
  cmake --install . --prefix "$pkgdir"/opt/rocm-${pkgver}
}


