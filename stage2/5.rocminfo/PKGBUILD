pkgbase='rocminfo'
pkgname=('rocminfo')
pkgver=next
pkgrel=999000
pkgdesc="rocm-core is a utility which can be used to get ROCm release version."
arch=('loong64' 'x86_64')
license=('MIT')
url="https://github.com/RadeonOpenCompute/rocm-core"

source=(
    "git+https://github.com/RadeonOpenCompute/rocminfo.git"
)
b2sums=('SKIP')
depends=("rocm-llvm=${pkgver}")

PATH=/opt/rocm-${pkgver}/bin:$PATH

prepare() {
  mkdir build || true
  cd build
  cmake "../rocminfo" \
  -DCMAKE_BUILD_TYPE=Debug \
   -DCMAKE_C_COMPILER=/opt/rocm-${pkgver}/bin/clang \
   -DCMAKE_CXX_COMPILER=/opt/rocm-${pkgver}/bin/clang++ \
   -DCMAKE_PREFIX_PATH="/opt/rocm-${pkgver}/;/usr" \
  "-DCMAKE_INSTALL_PREFIX=/opt/rocm-${pkgver}" \
  -G 'Unix Makefiles'
}
build() {
  cd build
  make -j
}

check() {
  cd build
#  ninja test
#make check
#echo
}

#packaging() {

#}
package() {
  cd build
  make DESTDIR="$pkgdir/" install
}

