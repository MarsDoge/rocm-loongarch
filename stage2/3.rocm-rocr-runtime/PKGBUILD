pkgbase='rocm-rocr-runtime'
pkgname=('rocm-rocr-runtime')
pkgver=6.2.2
pkgrel=622000
pkgdesc="rocm-core is a utility which can be used to get ROCm release version."
arch=('loong64' 'x86_64')
license=('Unknow')
url="https://github.com/ROCm/rocm-core"

source=(
    "git+https://github.com/ROCm/ROCR-Runtime.git#tag=rocm-$pkgver"
    "rocr-unsupport.patch"
)
b2sums=('SKIP' 'SKIP')
depends=("rocm-llvm=${pkgver}")

PATH=/opt/rocm-${pkgver}/bin:$PATH
prepare() {
  if [ $CARCH == 'loong64' ];
  then
    cd ROCR-Runtime
    git apply ../rocr-unsupport.patch
    cd ..
  fi
  mkdir build || true
  cd build
  cmake "../ROCR-Runtime/src" \
  -DCMAKE_BUILD_TYPE=Debug \
   -DCMAKE_C_COMPILER=/opt/rocm-${pkgver}/bin/clang \
   -DCMAKE_CXX_COMPILER=/opt/rocm-${pkgver}/bin/clang++ \
   -DCMAKE_INSTALL_PREFIX=/opt/rocm-${pkgver} \
   -DBUILD_SHARED_LIBS=ON \
  -G 'Unix Makefiles'
}
build() {
  cd build
  cmake --build .
}

check() {
  cd build
#  ninja test
#make check
#echo
}

#packaging() {

#}
package() {
  cd build
  cmake --install . --prefix "$pkgdir"/opt/rocm-${pkgver}
}
