pkgbase='rocm-clr'
pkgname=('rocm-clr')
pkgver=next
pkgrel=999000
pkgdesc="rocm-core is a utility which can be used to get ROCm release version."
arch=('loong64' 'x86_64')
license=('MIT')
url="https://github.com/RadeonOpenCompute/ROCT-Thunk-Interface.git"

source=(
    "git+https://github.com/ROCm-Developer-Tools/HIPCC.git#branch=develop"
    "git+https://github.com/ROCm-Developer-Tools/clr.git#branch=rocm-5.7.x"
    "git+https://github.com/ROCm-Developer-Tools/HIP.git#branch=rocm-5.7.x"
    "clr.patch"
)
b2sums=('SKIP' 'SKIP' 'SKIP' 'SKIP')
PATH=/opt/rocm-${pkgver}/bin:/opt/rocm-${pkgver}/llvm/bin:$PATH
depends=("rocm-llvm=${pkgver}"
"rocm-roct-thunk-interface=${pkgver}"
"rocm-cmake=${pkgver}"
"rocm-device-libs=${pkgver}"
"rocm-rocr-runtime=${pkgver}"
"rocminfo=${pkgver}"
"rocm-compilersupport=${pkgver}")

prepare() {
  mkdir hipcc-build || true
  cd hipcc-build
  cmake ../HIPCC \
   -DCMAKE_BUILD_TYPE=Debug \
   -DCMAKE_C_COMPILER=/opt/rocm-${pkgver}/bin/clang \
   -DCMAKE_FIND_ROOT_PATH=/opt/rocm-${pkgver}/ \
   -DCMAKE_CXX_COMPILER=/opt/rocm-${pkgver}/bin/clang++ \
  "-DCMAKE_PREFIX_PATH=/opt/rocm-${pkgver}/;/usr" \
  "-DCMAKE_INSTALL_PREFIX=/opt/rocm-${pkgver}" \
  -DCMAKE_EXE_LINKER_FLAGS="-L/opt/rocm-${pkgver}/lib" \
  -G "Unix Makefiles"
  cmake --build .
  cd ..

  if [ $CARCH == 'loong64' ];
  then
    cd clr
    sed -i 's!x86_64-unknown-linux-gnu!loongarch64-unknown-linux-gnu!g' hipamd/src/hip_embed_pch.sh
    git apply ../clr.patch
    cd ..
  fi

  mkdir build || true
  cd build
  if [ -z $AMDGPU_TARGETS ];
  then
    OFFLOAD_ARCH_STR=-DOFFLOAD_ARCH_STR="--offload-arch=$AMDGPU_TARGETS"
  fi

  cmake ../clr/ \
   -DHIP_COMMON_DIR=$PWD/../HIP \
   -DHIP_PLATFORM=amd \
   -DHIPCC_BIN_DIR=$PWD/../hipcc-build/ \
   -DCLR_BUILD_HIP=ON \
   -DCMAKE_BUILD_TYPE=Debug \
   -DCLR_BUILD_OCL=ON \
   -DROCM_PATH=/opt/rocm-${pkgver}/ \
   -DCMAKE_C_COMPILER=/opt/rocm-${pkgver}/bin/clang \
   -DCMAKE_FIND_ROOT_PATH=/opt/rocm-${pkgver}/ \
   -DCMAKE_CXX_COMPILER=/opt/rocm-${pkgver}/bin/clang++ \
   -DCMAKE_PREFIX_PATH="/opt/rocm-${pkgver}/;/usr" \
   -DCMAKE_INSTALL_PREFIX="/opt/rocm-${pkgver}" \
   -DOFFLOAD_ARCH_STR=$OFFLOAD_ARCH_STR \
   -DCMAKE_EXE_LINKER_FLAGS="-L/opt/rocm-${pkgver}/lib" \
   -G "Unix Makefiles"
  sed -i 's!.bat!!g' hipamd/cmake_install.cmake
}
build() {
  mkdir build || true
  cd build
  cmake --build .
}

