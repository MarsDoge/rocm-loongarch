#packaging() {

#}
package() {
  cd hipcc-build
  cmake --install . --prefix "$pkgdir"/opt/rocm-${pkgver}
  cd ..
  cd build
  make DESTDIR="$pkgdir/" install
#  cmake --install . --prefix "$pkgdir"/opt/rocm-${pkgver}
}
