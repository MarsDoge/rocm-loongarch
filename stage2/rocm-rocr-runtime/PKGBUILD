pkgbase='rocm-rocr-runtime'
pkgname=('rocm-rocr-runtime')
pkgver=next
pkgrel=999000
pkgdesc="rocm-core is a utility which can be used to get ROCm release version."
arch=('loong64' 'x86_64')
license=('Unknow')
url="https://github.com/RadeonOpenCompute/rocm-core"

source=(
    "git+https://github.com/RadeonOpenCompute/ROCR-Runtime.git#branch=master"
    "rocr-loongarch64.patch"
)
b2sums=('SKIP' 'SKIP')
depends=("rocm-llvm=${pkgver}" "rocm-device-libs=${pkgver}")

PATH=/opt/rocm-${pkgver}/bin:$PATH
prepare() {
  if [ $CARCH == 'loong64' ];
  then
    cd ROCR-Runtime
#    git apply ../rocr-loongarch64.patch
    cd ..
  fi
  mkdir build || true
  cd build
  cmake "../ROCR-Runtime/src" \
  -DCMAKE_BUILD_TYPE=Debug \
   -DCMAKE_C_COMPILER=/opt/rocm-${pkgver}/bin/clang \
   -DCMAKE_CXX_COMPILER=/opt/rocm-${pkgver}/bin/clang++ \
   -DCMAKE_INSTALL_PREFIX=/opt/rocm-${pkgver} \
  -G 'Unix Makefiles'
}
build() {
  cd build
  cmake --build .
}

check() {
  cd build
#  ninja test
#make check
#echo
}

#packaging() {

#}
package() {
  cd build
  cmake --install . --prefix "$pkgdir"/opt/rocm-${pkgver}
}
