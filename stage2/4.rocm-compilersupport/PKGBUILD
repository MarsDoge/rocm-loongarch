
pkgbase='rocm-compilersupport'
pkgname=('rocm-compilersupport')
pkgver=next
pkgrel=999000
pkgdesc="rocm-core is a utility which can be used to get ROCm release version."
arch=('loong64' 'x86_64')
license=('MIT')
url="https://github.com/ROCm/ROCT-Thunk-Interface.git"

source=(
    "git+https://github.com/ROCm/ROCm-CompilerSupport.git#branch=rocm-5.7.x"
    "rcs.patch"
)
b2sums=('SKIP' 'SKIP')
PATH=/opt/rocm-${pkgver}/bin:$PATH
depends=("rocm-llvm=${pkgver}")

prepare() {
  cd ROCm-CompilerSupport
    git apply ../rcs.patch
  cd ..
  if [ $CARCH == 'loong64' ];
  then 
    sed -i 's!x86_64-unknown-linux-gnu!loongarch64-unknown-linux-gnu!g' ROCm-CompilerSupport/lib/comgr/src/comgr-compiler.cpp
  fi
  sed -i 's!support::little!endianness::little!g' ROCm-CompilerSupport/lib/comgr/src/comgr-metadata.cpp
  mkdir build || true
  cd build
  cmake ../ROCm-CompilerSupport/lib/comgr \
  -DCMAKE_BUILD_TYPE=Debug \
  -DBUILD_TESTING=on \
   -DCMAKE_C_COMPILER=/opt/rocm-${pkgver}/bin/clang \
   -DCMAKE_FIND_ROOT_PATH=/opt/rocm-${pkgver}/ \
   -DCMAKE_CXX_COMPILER=/opt/rocm-${pkgver}/bin/clang++ \
  "-DCMAKE_PREFIX_PATH=/opt/rocm-${pkgver}/;/usr" \
  "-DCMAKE_INSTALL_PREFIX=/opt/rocm-${pkgver}" \
  -DCMAKE_EXE_LINKER_FLAGS="-L/opt/rocm-${pkgver}/lib" \
  -DCMAKE_SHARED_LINKER_FLAGS=" /opt/rocm-next/lib/libLLVMAMDGPUCodeGen.so.18git  /opt/rocm-next/lib/libLLVMAMDGPUAsmParser.so.18git  /opt/rocm-next/lib/libLLVMAMDGPUDisassembler.so.18git  /opt/rocm-next/lib/libLLVMNVPTXCodeGen.so.18git  /opt/rocm-next/lib/libLLVMNVPTXDesc.so.18git  /opt/rocm-next/lib/libLLVMNVPTXInfo.so.18git  /opt/rocm-next/lib/libLLVMLoongArchCodeGen.so.18git  /opt/rocm-next/lib/libLLVMLoongArchAsmParser.so.18git  /opt/rocm-next/lib/libLLVMLoongArchDisassembler.so.18git  /opt/rocm-next/lib/libLLVMX86CodeGen.so.18git  /opt/rocm-next/lib/libLLVMX86AsmParser.so.18git  /opt/rocm-next/lib/libLLVMX86Desc.so.18git  /opt/rocm-next/lib/libLLVMX86Disassembler.so.18git  /opt/rocm-next/lib/libLLVMX86Info.so.18git  /opt/rocm-next/lib/libclangFrontendTool.so.18git  /opt/rocm-next/lib/libLLVMAMDGPUDesc.so.18git  /opt/rocm-next/lib/libLLVMAMDGPUInfo.so.18git  /opt/rocm-next/lib/libLLVMAMDGPUUtils.so.18git  /opt/rocm-next/lib/libLLVMLoongArchDesc.so.18git  /opt/rocm-next/lib/libLLVMLoongArchInfo.so.18git  /opt/rocm-next/lib/libclangCodeGen.so.18git  /opt/rocm-next/lib/libLLVMCodeGen.so.18git  /opt/rocm-next/lib/libLLVMObjCARCOpts.so.18git  /opt/rocm-next/lib/libLLVMipo.so.18git  /opt/rocm-next/lib/libLLVMInstrumentation.so.18git  /opt/rocm-next/lib/libLLVMVectorize.so.18git  /opt/rocm-next/lib/libclangFrontend.so.18git  /opt/rocm-next/lib/libclangDriver.so.18git  /opt/rocm-next/lib/libLLVMOption.so.18git  /opt/rocm-next/lib/libclangSerialization.so.18git  /opt/rocm-next/lib/libclangBasic.so.18git  /opt/rocm-next/lib/libLLVMScalarOpts.so.18git  /opt/rocm-next/lib/libLLVMAggressiveInstCombine.so.18git  /opt/rocm-next/lib/libLLVMInstCombine.so.18git  /opt/rocm-next/lib/libLLVMTransformUtils.so.18git  /opt/rocm-next/lib/libLLVMAnalysis.so.18git  /opt/rocm-next/lib/libLLVMMCParser.so.18git  /opt/rocm-next/lib/libLLVMMC.so.18git  /opt/rocm-next/lib/libLLVMCore.so.18git  /opt/rocm-next/lib/libLLVMTargetParser.so.18git  /opt/rocm-next/lib/libLLVMSupport.so.18git  /opt/rocm-next/lib/libLLVMAsmPrinter.so.18git  /opt/rocm-next/lib/libLLVMGlobalISel.so.18git  /opt/rocm-next/lib/libLLVMMIRParser.so.18git  /opt/rocm-next/lib/libLLVMPasses.so.18git  /opt/rocm-next/lib/libLLVMSelectionDAG.so.18git  /opt/rocm-next/lib/libLLVMCodeGenTypes.so.18git  /opt/rocm-next/lib/libLLVMHipStdPar.so.18git  /opt/rocm-next/lib/libLLVMTarget.so.18git  /opt/rocm-next/lib/libLLVMBinaryFormat.so.18git  /opt/rocm-next/lib/libLLVMMCDisassembler.so.18git  /opt/rocm-next/lib/libLLVMObject.so.18git  /opt/rocm-next/lib/libLLVMCFGuard.so.18git  /opt/rocm-next/lib/libLLVMProfileData.so.18git  /opt/rocm-next/lib/libclangExtractAPI.so.18git  /opt/rocm-next/lib/libclangRewriteFrontend.so.18git  /opt/rocm-next/lib/libclangARCMigrate.so.18git  /opt/rocm-next/lib/libclangStaticAnalyzerFrontend.so.18git  /opt/rocm-next/lib/libLLVMCoverage.so.18git  /opt/rocm-next/lib/libLLVMFrontendDriver.so.18git  /opt/rocm-next/lib/libLLVMLTO.so.18git  /opt/rocm-next/lib/libclangAnalysis.so.18git  /opt/rocm-next/lib/libLLVMFrontendHLSL.so.18git  /opt/rocm-next/lib/libclangAST.so.18git  /opt/rocm-next/lib/libclangLex.so.18git  /opt/rocm-next/lib/libLLVMExtensions.so.18git  /opt/rocm-next/lib/libLLVMCoroutines.so.18git  /opt/rocm-next/lib/libLLVMFrontendOpenMP.so.18git  /opt/rocm-next/lib/libLLVMFrontendOffloading.so.18git  /opt/rocm-next/lib/libLLVMLinker.so.18git  /opt/rocm-next/lib/libLLVMIRPrinter.so.18git  /opt/rocm-next/lib/libLLVMBitWriter.so.18git  /opt/rocm-next/lib/libLLVMIRReader.so.18git  /opt/rocm-next/lib/libLLVMBitReader.so.18git  /opt/rocm-next/lib/libLLVMDemangle.so.18git  /opt/rocm-next/lib/libclangParse.so.18git  /opt/rocm-next/lib/libclangSema.so.18git  /opt/rocm-next/lib/libclangAPINotes.so.18git  /opt/rocm-next/lib/libclangEdit.so.18git  /opt/rocm-next/lib/libLLVMBitstreamReader.so.18git  /opt/rocm-next/lib/libLLVMWindowsDriver.so.18git  /opt/rocm-next/lib/libLLVMDebugInfoCodeView.so.18git  /opt/rocm-next/lib/libLLVMRemarks.so.18git  /opt/rocm-next/lib/libLLVMDebugInfoDWARF.so.18git  /opt/rocm-next/lib/libLLVMAsmParser.so.18git  /opt/rocm-next/lib/libLLVMTextAPI.so.18git  /opt/rocm-next/lib/libLLVMSymbolize.so.18git  /opt/rocm-next/lib/libclangIndex.so.18git  /opt/rocm-next/lib/libclangRewrite.so.18git  /opt/rocm-next/lib/libclangStaticAnalyzerCheckers.so.18git  /opt/rocm-next/lib/libclangStaticAnalyzerCore.so.18git  /opt/rocm-next/lib/libclangCrossTU.so.18git  /opt/rocm-next/lib/libclangASTMatchers.so.18git  /opt/rocm-next/lib/libclangSupport.so.18git  /opt/rocm-next/lib/libLLVMDebugInfoPDB.so.18git  /opt/rocm-next/lib/libLLVMDebugInfoBTF.so.18git  /opt/rocm-next/lib/libclangFormat.so.18git  /opt/rocm-next/lib/libclangToolingCore.so.18git  /opt/rocm-next/lib/libLLVMDebugInfoMSF.so.18git  /opt/rocm-next/lib/libclangToolingInclusions.so.18git " \
  -G "Unix Makefiles"
}
build() {
  mkdir build || true
  cd build
  cmake --build .
}

check() {
echo
#  cd "ROCm-CompilerSupport"
#  cd build
#  make test
}

#packaging() {

#}
package() {
  cd build
  cmake --install . --prefix "$pkgdir"/opt/rocm-${pkgver}
}

