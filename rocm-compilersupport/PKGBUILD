
pkgbase='rocm-compilersupport'
pkgname=('rocm-compilersupport')
pkgver=5.7.x
pkgrel=507000
pkgdesc="rocm-core is a utility which can be used to get ROCm release version."
arch=('loong64' 'x86_64')
license=('MIT')
url="https://github.com/RadeonOpenCompute/ROCT-Thunk-Interface.git"

source=(
    "git+git://nas.xinmu.moe/mirrors/github.com/RadeonOpenCompute/ROCm-CompilerSupport.git#branch=amd-stg-open"
)
b2sums=('SKIP')
PATH=/opt/rocm-${pkgver}/bin:/opt/rocm-${pkgver}/llvm/bin:$PATH
depends=("rocm-llvm=${pkgver}")

prepare() {
  if [ $CARCH == 'loong64' ];
  then 
    sed -i 's!x86_64-unknown-linux-gnu!loongarch64-unknown-linux-gnu!g' ROCm-CompilerSupport/lib/comgr/src/comgr-compiler.cpp
  fi
  mkdir build || true
  cd build
  cmake ../ROCm-CompilerSupport/lib/comgr \
   -DCMAKE_C_COMPILER=/opt/rocm-${pkgver}/llvm/bin/clang \
   -DCMAKE_FIND_ROOT_PATH=/opt/rocm-${pkgver}/ \
   -DCMAKE_CXX_COMPILER=/opt/rocm-${pkgver}/llvm/bin/clang++ \
  "-DCMAKE_PREFIX_PATH=/opt/rocm-${pkgver}/llvm/;/opt/rocm-${pkgver}/;/usr" \
  "-DCMAKE_INSTALL_PREFIX=/opt/rocm-${pkgver}" \
  -DCMAKE_EXE_LINKER_FLAGS="-L/opt/rocm-${pkgver}/llvm/lib" \
  -G "Unix Makefiles"
}
build() {
  mkdir build || true
  cd build
  make -j4
}

check() {
#  cd "ROCm-CompilerSupport"
#  cd build
#  make ctest
echo
}

#packaging() {

#}
package() {
  cd build
  make DESTDIR="$pkgdir/" install
}

