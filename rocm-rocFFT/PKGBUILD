
pkgbase='rocm-rocFFT'
pkgname=('rocm-rocFFT')
pkgver=5.7.x
pkgrel=507000
pkgdesc="rocm-core is a utility which can be used to get ROCm release version."
arch=('loong64' 'x86_64')
license=('MIT')
url="https://github.com/RadeonOpenCompute/ROCT-Thunk-Interface.git"

source=(
    "git+git://nas.xinmu.moe/mirrors/github.com/ROCmSoftwarePlatform/rocFFT.git#branch=release/rocm-rel-5.7"
)
b2sums=('SKIP')
depends=("rocm-clr=${pkgver}")
PATH=/opt/rocm-${pkgver}/bin:/opt/rocm-${pkgver}/llvm/bin:$PATH
prepare() {
  mkdir build || true
  cd build
  LD_LIBRARY_PATH=/opt/rocm-${pkgver}/lib64:$LD_LIBRARY_PATH cmake ../rocFFT \
   -DCMAKE_BUILD_TYPE=Release \
   -DCMAKE_C_COMPILER=/opt/rocm-${pkgver}/llvm/bin/clang \
   -DCMAKE_FIND_ROOT_PATH=/opt/rocm-${pkgver}/ \
   -DCMAKE_CXX_COMPILER=/opt/rocm-${pkgver}/bin/hipcc \
   -DCMAKE_CXX_FLAGS="-L/opt/rocm-${pkgver}/llvm/lib  -L/opt/rocm-${pkgver}/hip/lib" \
   -DCMAKE_PREFIX_PATH="/opt/rocm-${pkgver}/llvm/;/opt/rocm-${pkgver}/;/usr" \
   -DCMAKE_INSTALL_PREFIX=/opt/rocm-${pkgver} \
   -DSQLITE_SRC_URL=http://nas.xinmu.moe:8086/mirrors/sqlite3/sqlite-amalgamation-3360000.zip \
   -DCMAKE_EXE_LINKER_FLAGS="-L/opt/rocm-${pkgver}/llvm/lib  -L/opt/rocm-${pkgver}/hip/lib" \
  -G "Unix Makefiles"
}
build() {
  mkdir build || true
  cd build
  LD_LIBRARY_PATH=/opt/rocm-${pkgver}/lib64:$LD_LIBRARY_PATH make -j
}

check() {
#  cd "ROCm-CompilerSupport"
#  cd build
#  make ctest
echo
}

#packaging() {

#}
package() {
  cd build
  LD_LIBRARY_PATH=/opt/rocm-${pkgver}/lib64:$LD_LIBRARY_PATH make DESTDIR="$pkgdir/" install
}

